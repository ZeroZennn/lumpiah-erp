{
  "name": "lumpiah-erp",
  "version": "1.0.0",
  "private": true,
  "description": "Lumpiah ERP Monorepo",
  "scripts": {
    "prepare": "husky",
    "build:api": "cd apps/api-server && npm run build",
    "build:web": "cd apps/lumpiah-web-admin && npm run build",
    "build:mobile": "cd apps/mobile_pos_cashier && flutter build apk --debug",
    "build:all": "npm run build:api && npm run build:web",
    "lint:api": "cd apps/api-server && npm run lint",
    "lint:web": "cd apps/lumpiah-web-admin && npm run lint",
    "lint:all": "npm run lint:api && npm run lint:web",
    "check:all": "npm run lint:all && npm run build:all"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "apps/api-server/**/*.{ts,js}": [
      "eslint --config apps/api-server/eslint.config.mjs --fix"
    ],
    "apps/lumpiah-web-admin/**/*.{ts,tsx,js,jsx}": [
      "eslint --config apps/lumpiah-web-admin/eslint.config.mjs --fix"
    ]
  }
}
